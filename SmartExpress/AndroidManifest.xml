<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psw.smartexpress"
    android:versionCode="3"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        android:name="com.psw.smartexpress.application.Mapplication" >
        
        <activity android:name="com.psw.smartexpress.LoginActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <activity android:name="com.psw.smartexpress.MainActivity"
            android:launchMode="singleTask"></activity>
        
        <activity android:name="com.psw.smartexpress.GetPackageActivity"
            android:windowSoftInputMode="stateHidden"
            ></activity>
        
        <activity android:name="com.psw.smartexpress.QueryOrderActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"></activity>
        <activity android:name="com.psw.smartexpress.SendPackageActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"></activity>
        
                <activity android:name="com.psw.smartexpress.AddSuccessActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"></activity>
                
                <activity android:name="com.psw.smartexpress.SettingsActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"></activity>
                
                <activity android:name="com.psw.smartexpress.LListActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"></activity>
    </application>

</manifest>
