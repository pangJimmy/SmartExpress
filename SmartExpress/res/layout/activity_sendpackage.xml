<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
        <include layout="@layout/title_normal" />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_getpackage"
                android:background="@color/list_light" />

            <TextView
                android:id="@+id/textView_getpackage"
                style="@style/NormalContentFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="单号：" />

            <EditText
                android:id="@+id/editText_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView_getpackage"
                android:layout_alignBottom="@+id/textView_getpackage"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_getpackage"
                android:background="@color/white"
                android:ems="16"
                android:minHeight="30dp" >

            </EditText>
            

        </RelativeLayout>
        
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textView_qs_person"
                android:background="@color/list_light" />

            <TextView
                android:id="@+id/textView_qs_person"
                style="@style/NormalContentFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="签收人：" />

            <EditText
                android:id="@+id/edit_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView_qs_person"
                android:layout_alignBottom="@+id/textView_qs_person"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_qs_person"
                android:background="@color/white"
                android:ems="16"
                android:minHeight="30dp" >

            </EditText>
            

        </RelativeLayout>
        
        <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/NormalContentFont"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" " />
        
            <Button
        android:id="@+id/button_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="提交" />

    </LinearLayout>



</LinearLayout>
